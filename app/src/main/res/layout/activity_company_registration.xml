<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopme.CustomerLogin"
    android:background="@drawable/shopme1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create an Acount"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/txt_welcome"/>

    <ImageButton
        android:id="@+id/img_btn_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cross"
        android:background="#000000"/>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_welcome"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000000"
        android:hint="Name"
        android:textColorHint="#000000"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/input_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_name"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:hint="Password"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/input_confirm_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_pass"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:hint="Re-enter password"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_confirm_pass"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:hint="Email"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_email"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:hint="Contact #"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/input_adress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_phone"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:hint="Adress"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textMultiLine"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="SignUp"
        android:background="@drawable/round"
        android:textColor="#000000"
        android:id="@+id/btn_signup"
        android:layout_below="@+id/input_adress"
        android:layout_marginTop="30dp"/>



</RelativeLayout>
