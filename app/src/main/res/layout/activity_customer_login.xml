<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopme.CustomerLogin"
    android:background="@drawable/shopme1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome!"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/txt_welcome"/>

    <ImageButton
        android:id="@+id/img_btn_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cross"
        android:background="#000000"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_welcome"
        android:layout_marginTop="50dp"
        android:backgroundTint="#000000"
        android:hint="Email"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/input_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_email"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:hint="Password"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"
        android:background="@drawable/round"
        android:textColor="#000000"
        android:id="@+id/btn_login"
        android:layout_below="@+id/input_pass"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forget Password?"
        android:textColor="#000000"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CREATE ACCOUNT"
        android:background="@drawable/round_transparent"
        android:textColor="#000000"
        android:id="@+id/btn_create_acount"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>


</RelativeLayout>
