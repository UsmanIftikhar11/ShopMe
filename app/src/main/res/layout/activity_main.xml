<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shopme.MainActivity"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/shopme1"
        android:scaleType="fitXY"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ShopMe"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="120dp"
        android:id="@+id/title_proj"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Save Money. Live better"
        android:textColor="#000000"
        android:layout_below="@+id/title_proj"
        android:layout_marginTop="15dp"
        android:id="@+id/slogan_proj"
        android:textSize="16sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_customer"
        android:layout_marginTop="-90dp"
        android:text="Company"
        android:background="@drawable/round"
        android:textColor="#000000"
        android:id="@+id/btn_company"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Customer"
        android:background="@drawable/round"
        android:textColor="#000000"
        android:id="@+id/btn_customer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Or"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/btn_customer"
        android:layout_marginTop="-130dp"/>

</RelativeLayout>
