<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cust_post_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_btn"/>

        <ImageView
            android:id="@+id/cust_sale_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sale"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/cust_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/cust_post_img"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cust_post_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingBottom="15dp"
            android:text="Description"
            android:layout_below="@+id/cust_post_title"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cust_post_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingBottom="15dp"
            android:text="Company name"
            android:layout_below="@+id/cust_post_desc"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cust_post_DiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="$0.0"
            android:layout_alignBaseline="@+id/cust_post_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cust_post_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="$0.0"
            android:layout_alignBaseline="@+id/cust_post_desc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/cust_post_DiscountPrice"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:background="#F44336"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/cust_post_DaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="Days Left"
            android:layout_alignBaseline="@+id/cust_post_companyName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/img_btn_wishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cust_post_DaysLeft"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/bookmark"
            android:background="#00FFFFFF"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>