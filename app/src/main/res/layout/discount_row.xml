<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/post_discCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Comapny Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/post_discProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingBottom="15dp"
            android:text="Product"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/post_discCompanyName"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/post_discPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingBottom="15dp"
            android:text="Price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/post_discProductName"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/post_discDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="75dp"
            android:paddingBottom="15dp"
            android:text="Description"
            android:textSize="12sp"
            android:layout_below="@+id/post_discPrice"
            android:textColor="#000000"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>